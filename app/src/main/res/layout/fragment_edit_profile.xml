<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.breckworld.ui.main.editProfile.EditProfileViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@color/header_color"
            android:paddingTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_back"
                    android:padding="7dp"
                    app:tint="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="45dp"
                    android:layout_marginEnd="45dp"
                    android:singleLine="true"
                    android:text="@string/edit_profile"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scroll_view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/colorWhite">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants">

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/colorDarkGreen"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="@string/edit_profile"
                    app:lineHeight="32sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/image_view_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="1dp"
                    android:onClick="@{()->viewModel.onImageClick()}"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/ic_profile_default"
                    app:loadAvatar="@{viewModel.profileAvatar}"
                    app:circleImageFile="@{viewModel.profileAvatarFile}"
                    tools:ignore="ContentDescription"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/text_view_avatar_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorWoodsmoke"
                    android:text="@string/change_profile_photo"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/image_view_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_view_first_name_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:textColor="@color/header_color"
                    android:text="@string/first_name"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_avatar_hint"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_first_name"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_first_name"
                    tools:ignore="SmallSp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/edit_text_first_name"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_white_bottom_line_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:maxLines="1"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:text='@={viewModel.firstName}'
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    tools:text="Evan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_first_name_hint"
                    tools:ignore="Autofill,LabelFor"/>

                <TextView
                    android:id="@+id/text_view_last_name_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="11sp"
                    android:textAllCaps="true"
                    android:textColor="@color/header_color"
                    android:text="@string/last_name"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name"
                    app:layout_constraintStart_toStartOf="@+id/edit_text_last_name"
                    app:layout_constraintEnd_toEndOf="@+id/edit_text_last_name"
                    tools:ignore="SmallSp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginStart="4dp"/>

                <EditText
                    android:id="@+id/edit_text_last_name"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_white_bottom_line_green"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:maxLines="1"
                    android:text='@={viewModel.lastName}'
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    tools:text="Smith"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_last_name_hint"
                    tools:ignore="Autofill,LabelFor"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/material_button_save"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/save"
                    android:textSize="15sp"
                    android:enabled="@{viewModel.isSaveBtnEnabled(), default = false}"
                    android:onClick="@{()->viewModel.onSave()}"
                    android:textAllCaps="false"
                    android:textColor="@color/header_color"
                    android:fontFamily="@font/lato_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="4dp"
                    app:rippleColor="@color/colorSilver"
                    app:backgroundTint="@color/colorDarkWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name"
                    app:layout_constraintVertical_bias="1.0"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
</layout>