<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="com.breckworld.ui.main.offerPreviewDialog.OfferPreviewViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDialogBackground">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <ScrollView android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_view_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="27dp"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="22dp"
                            android:ellipsize="end"
                            android:textSize="28sp"
                            android:fontFamily="@font/lato_bold"
                            android:textColor="@color/colorBlackType1"
                            android:maxLines="2"
                            android:text="@{viewModel.title}"
                            tools:text="Castle Acre Ruins"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                            android:id="@+id/text_view_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/colorBlackType2"
                            android:text="@{viewModel.description}"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="Castle Acre Ruins is a rare and complete example of a Norman settlement that includes a castle, village and church. It&apos;s free and there&apos;s a star at the summit!"/>

                    <ImageView
                            android:id="@+id/image_view_photo"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="60dp"
                            android:layout_marginTop="16dp"
                            app:imageUrl="@{viewModel.photoUrl}"
                            app:placeholderId="@{viewModel.placeholderId}"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_description"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:ignore="ContentDescription"/>

                    <TextView
                            android:id="@+id/text_view_adults"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/image_view_photo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/adults"
                            android:layout_marginTop="40dp"/>

                    <com.travijuu.numberpicker.library.NumberPicker
                            android:id="@+id/number_picker_adults"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            app:min="0"
                            app:max="1000"
                            app:value="0"
                            app:unit="1"
                            app:focusable="false"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/view_divider_adults"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/view_divider_adults"
                            app:layout_constraintHorizontal_bias="1.0"/>

                    <View
                            android:id="@+id/view_divider_adults"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_adults"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@color/colorDivider"/>

                    <TextView
                            android:id="@+id/text_view_children"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="30dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@+id/view_divider_adults"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:text="@string/children"
                            android:layout_marginTop="30dp"/>

                    <com.travijuu.numberpicker.library.NumberPicker
                            android:id="@+id/number_picker_children"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            app:min="0"
                            app:max="1000"
                            app:value="0"
                            app:unit="1"
                            app:focusable="false"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/view_divider_children"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/view_divider_children"
                            app:layout_constraintHorizontal_bias="1.0"/>

                    <View
                            android:id="@+id/view_divider_children"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            app:layout_constraintTop_toBottomOf="@+id/text_view_children"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:background="@color/colorDivider"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/material_button_claim_coupon"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="39dp"
                            android:text="@string/claim_coupon"
                            android:textSize="15sp"
                            android:layout_marginBottom="18dp"
                            android:enabled="@{viewModel.isClaimCouponBtnEnabled(), default = true}"
                            android:onClick="@{() -> viewModel.onClaimCoupon()}"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/lato_regular"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="4dp"
                            app:rippleColor="@color/colorSilver"
                            app:backgroundTint="@color/selector_medium_aquamarine_grey"
                            app:layout_constraintTop_toBottomOf="@+id/view_divider_children"
                            android:layout_marginTop="30dp"
                            app:layout_constraintStart_toStartOf="@+id/view_divider_children"
                            app:layout_constraintEnd_toEndOf="@+id/view_divider_children"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="1.0"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>