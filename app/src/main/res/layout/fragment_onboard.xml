<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.breckworld.ui.login.onboard.OnboardViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_title"
                app:srcCompat="@drawable/ic_login_logo"
                app:layout_constraintVertical_chainStyle="packed"
                android:id="@+id/image_view_logo"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorDarkGreen"
                android:text="@string/app_name"
                app:lineHeight="24sp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@+id/image_view_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_description"/>

        <TextView
                android:id="@+id/text_view_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorDarkGreen"
                android:textSize="16sp"
                android:gravity="top|center_horizontal"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                android:text="@string/onboard_description"
                app:lineHeight="24sp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button_sign_up"
                tools:ignore="SmallSp"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_up"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="51dp"
                android:layout_width="0dp"
                app:strokeColor="@color/selector_black_silver"
                app:rippleColor="@color/colorSilver"
                android:text="@string/sign_up"
                android:layout_marginTop="49.3dp"
                android:textSize="14sp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:textAllCaps="true"
                android:onClick="@{()->viewModel.onSignUp()}"
                android:textColor="@color/selector_black_silver"
                app:cornerRadius="4dp"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/button_log_in"
                app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_log_in"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="51dp"
                android:layout_width="0dp"
                app:strokeColor="@color/selector_black_silver"
                app:rippleColor="@color/colorSilver"
                android:text="@string/log_in"
                android:layout_marginTop="11.5dp"
                android:textSize="14sp"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:textAllCaps="true"
                android:onClick="@{()->viewModel.onLogIn()}"
                android:textColor="@color/selector_black_silver"
                app:cornerRadius="4dp"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="22dp"
                app:layout_constraintTop_toBottomOf="@+id/button_sign_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_terms_of_service"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/text_view_terms_of_service"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorDarkGreen"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:onClick="@{()->viewModel.onTermsOfService()}"
                android:layout_marginStart="22dp"
                android:text="@string/terms_of_service"
                app:lineHeight="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_log_in"/>

        <TextView
                android:id="@+id/text_view_privacy_policy"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorDarkGreen"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{()->viewModel.onPrivacyPolicy()}"
                android:layout_marginEnd="22dp"
                android:text="@string/privacy_policy"
                app:lineHeight="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_view_terms_of_service" android:layout_marginStart="32dp"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintTop_toTopOf="@+id/text_view_terms_of_service"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_terms_of_service"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.489"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>