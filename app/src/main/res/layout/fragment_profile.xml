<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.breckworld.ui.main.profile.ProfileViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

        <TextView
                android:id="@+id/text_view_full_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:maxLines="4"
                android:ellipsize="end"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/colorDarkGreen"
                android:layout_marginStart="30dp"
                android:text="@{viewModel.fullName}"
                app:lineHeight="32sp"
                app:layout_constraintTop_toTopOf="@+id/image_view_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/image_view_avatar" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/image_view_avatar"
                tools:text="Michael Sylvester"/>

        <ImageView
                android:id="@+id/image_view_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="1dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/ic_profile_default"
                app:loadAvatar="@{viewModel.profileAvatar}"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:id="@+id/text_view_edit_profile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:layout_marginTop="80dp"
                android:paddingEnd="16dp"
                android:textSize="18sp"
                android:onClick="@{()->viewModel.onEditProfile()}"
                android:background="@drawable/ripple_bg_white_bottom_line_silver"
                android:textColor="@color/colorWoodsmoke"
                android:text="@string/edit_profile"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_triangle_green"
                android:drawablePadding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_full_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/text_view_settings"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:textSize="18sp"
                android:onClick="@{()->viewModel.onSettings()}"
                android:background="@drawable/ripple_bg_white_bottom_line_silver"
                android:textColor="@color/colorWoodsmoke"
                android:text="@string/settings"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_triangle_green"
                android:drawablePadding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_edit_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/text_view_log_out"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:textSize="18sp"
                android:onClick="@{()->viewModel.onLogOut()}"
                android:background="@drawable/ripple_bg_white_bottom_line_silver"
                android:textColor="@color/colorWoodsmoke"
                android:text="@string/log_out"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_triangle_green"
                android:drawablePadding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_settings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>