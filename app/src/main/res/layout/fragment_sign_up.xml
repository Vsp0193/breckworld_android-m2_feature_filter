<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.breckworld.ui.login.signUp.SignUpViewModel"/>
    </data>
    <ScrollView
            android:id="@+id/scroll_view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/colorWhite">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants">

            <ImageView
                    android:id="@+id/image_view_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:layout_marginStart="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{()->viewModel.onBack()}"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_back"
                    tools:ignore="ContentDescription"/>

            <ImageView
                    android:id="@+id/image_view_logo"
                    android:layout_width="194dp"
                    android:layout_height="194dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_title"
                    app:srcCompat="@drawable/ic_login_logo"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorDarkGreen"
                    android:text="@string/app_name"
                    app:lineHeight="24sp"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@+id/image_view_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_username"/>

            <TextView
                    android:id="@+id/text_view_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorDarkGreen"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:gravity="top|center_horizontal"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:text="@string/sign_up_description"
                    app:lineHeight="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_first_name"
                    tools:ignore="SmallSp"/>

            <EditText
                    android:id="@+id/edit_text_first_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_bottom_line_silver"
                    android:ellipsize="end"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:hint="@string/first_name"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:maxLines="1"
                    android:text='@={viewModel.firstName}'
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSilver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_last_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_description"
                    tools:ignore="Autofill"/>

            <EditText
                    android:id="@+id/edit_text_last_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_bottom_line_silver"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:hint="@string/last_name"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:maxLines="1"
                    android:text='@={viewModel.lastName}'
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSilver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_username"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name"
                    tools:ignore="Autofill"/>

            <EditText
                    android:id="@+id/edit_text_username"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_bottom_line_silver"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:hint="@string/username"
                    android:inputType="textCapSentences"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:maxLines="1"
                    android:text='@={viewModel.username}'
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSilver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_email"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name"
                    tools:ignore="Autofill"/>

            <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_bottom_line_silver"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:maxLines="1"
                    android:text='@={viewModel.email}'
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSilver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/edit_text_password"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_username"
                    tools:ignore="Autofill"/>

            <EditText
                    android:id="@+id/edit_text_password"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_white_bottom_line_silver"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center_vertical|start"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:maxLines="1"
                    android:text='@={viewModel.password}'
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorSilver"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/button_sign_up"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_email"
                    tools:ignore="Autofill"/>


            <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sign_up"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_height="51dp"
                    android:layout_width="0dp"
                    app:strokeColor="@color/selector_black_silver"
                    app:rippleColor="@color/colorSilver"
                    android:text="@string/sign_up"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:textAllCaps="true"
                    android:enabled="@{viewModel.isSignUpBtnEnabled}"
                    android:onClick="@{()->viewModel.onSignUp()}"
                    android:textColor="@color/selector_black_silver"
                    app:cornerRadius="4dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    app:layout_constraintTop_toBottomOf="@+id/edit_text_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_create_account_or_login"/>

            <TextView
                    android:id="@+id/text_view_create_account_or_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorDodgerBlue"
                    android:textSize="16sp"
                    android:onClick="@{()->viewModel.onCreateAccountOrLogin()}"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:gravity="top|center_horizontal"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="22dp"
                    android:text="@string/create_account_or_login"
                    app:lineHeight="24sp"
                    app:layout_constraintTop_toBottomOf="@+id/button_sign_up"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/text_view_terms_of_service"
                    tools:ignore="SmallSp"/>


            <TextView
                    android:id="@+id/text_view_terms_of_service"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorDarkGreen"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:layout_marginTop="26dp"
                    android:onClick="@{()->viewModel.onTermsOfService()}"
                    android:layout_marginStart="22dp"
                    android:text="@string/terms_of_service"
                    app:lineHeight="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_create_account_or_login"/>

            <TextView
                    android:id="@+id/text_view_privacy_policy"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorDarkGreen"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onPrivacyPolicy()}"
                    android:layout_marginEnd="22dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/privacy_policy"
                    app:lineHeight="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_view_terms_of_service"
                    app:layout_constraintHorizontal_bias="0.38"
                    app:layout_constraintTop_toTopOf="@+id/text_view_terms_of_service"
                    app:layout_constraintBottom_toBottomOf="@+id/text_view_terms_of_service"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.489"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>