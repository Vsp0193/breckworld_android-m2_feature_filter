<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.breckworld.ui.main.stardialog.StarDialogViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/fl_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDialogBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="22dp"
                    android:textSize="21sp"
                    app:autoSizeMinTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/colorBlackType1"
                    android:letterSpacing="-0.03"
                    android:maxLines="2"
                    android:layout_marginEnd="21dp"
                    android:text="Castle Acre Ruins"
                    tools:text="Castle Acre Ruins"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_star" />

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/ic_star_collect"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintTop_toTopOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/star_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/lato_regular"
                    android:background="@drawable/bg_badge"
                    app:visibility="@{viewModel.badges != 0}"
                    android:text="@{String.valueOf(viewModel.badges)}"
                    tools:visibility="visible"
                    tools:text="10"
                    app:layout_constraintTop_toTopOf="@+id/iv_star"
                    app:layout_constraintStart_toEndOf="@+id/iv_star"
                    app:layout_constraintEnd_toEndOf="@+id/iv_star"
                    app:layout_constraintBottom_toTopOf="@+id/iv_star"/>

                <FrameLayout
                    android:id="@+id/fl_media"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="H,4:3"
                    android:layout_marginTop="20dp"
                    tools:background="@color/colorZircon"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/colorBlackType2"
                    android:lineSpacingExtra="1sp"
                    android:maxLines="4"
                    android:text="Castle Acre Ruins is a rare and complete example of a Norman settlement that includes a castle, village and church. It&apos;s free and there&apos;s a star at the summit"
                    app:layout_constraintTop_toBottomOf="@id/fl_media"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Castle Acre Ruins is a rare and complete example of a Norman settlement that includes a castle, village and church. It&apos;s free and there&apos;s a star at the summit!"
                    />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="12sp"
                    android:textColor="#4f4f4f"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="1sp"
                    android:maxLines="2"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_location_green"
                    android:drawablePadding="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    app:layout_constraintBottom_toTopOf="@id/vw_divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Pye&apos;s Lane, Castle Acre, PE32 2XB"
                    tools:text="Pye&apos;s Lane, Castle Acre, PE32 2XB. Pye&apos;s Lane, Castle Acre, PE32 2XB." />

                <View
                    android:id="@+id/vw_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_experience"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/colorDivider"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_experience"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/experience"
                    android:fontFamily="@font/lato_regular"
                    android:textAllCaps="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@color/colorGreen"
                    app:rippleColor="@color/colorSilver"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_website"
                    app:layout_constraintBottom_toTopOf="@id/btn_close"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_website"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="18dp"
                    android:text="@string/website"
                    android:textAllCaps="false"
                    android:textColor="@color/colorGreen"
                    android:fontFamily="@font/lato_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="4dp"
                    app:rippleColor="@color/colorSilver"
                    app:backgroundTint="@color/colorDarkWhite"
                    app:layout_constraintStart_toEndOf="@id/btn_experience"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_close"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_close"
                    style="@style/Widget.MaterialComponents.FloatingActionButton"
                    app:fabSize="mini"
                    android:src="@drawable/ic_close_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:onClick="@{() -> viewModel.closeDialog()}"
                    app:backgroundTint="@color/colorGreen"
                    app:elevation="1dp"
                    app:hoveredFocusedTranslationZ="1dp"
                    app:pressedTranslationZ="1dp"
                    app:rippleColor="@color/colorSilver"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>