<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:textColor="@color/colorArviewCardInfoText"
        android:background="@drawable/bg_rounded_white_transparent"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:gravity="center"
        android:text="Some star" />
    
    <com.breckworld.view.TriangleView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        app:triangleColor="@color/colorArviewCardInfoBackground" />

</LinearLayout>