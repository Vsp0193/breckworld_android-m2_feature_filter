<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="state"
            type="com.breckworld.ui.main.home.preview_adapter.HomePreviewItemState" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="@{() -> state.onItemClick()}">
        
        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            app:loadResImage="@{state.previewImage}"
            tools:background="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:singleLine="true"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:text="@{state.previewTitle}"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_transparent_gradient_black"
            tools:text="@tools:sample/cities" />

    </FrameLayout>
</layout>